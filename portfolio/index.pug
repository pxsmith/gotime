html(lang='en-US')
  head
    include /source/components/head.pug
    include /source/components/meta-tags.pug
    include /source/components/google-analytics.pug

  body.page.subpage
    include /source/components/nav.pug
    .layout-with-sticky-image
      .layout-header.animate--on-scroll.animation--blur.animation--right
        h1 Design services for <span class='text-highlight'>fast-moving&nbsp; teams&nbsp;</span>
        p At Go Time we’ve helped many founders &amp; fast-moving businesses with everything below. You’re going to see your first round of designs in under a week. This isn’t our first rodeo!

        .layout-visuals.layout-mobile.animate--on-scroll.animation--blur.animation--left
          img.image-with-border(src='/source/images/photo-hairpin-turn.jpg' srcset='/source/images/photo-hairpin-turn@2x.jpg 2x' draggable='false')

        mixin service(serviceName, link)
          a(href=link).df.jc-space-between.bb.pt1.pb1.animate--on-scroll.animation--right
            h3= serviceName
            h3 →

        mixin serviceNoLink(serviceName)
          .df.jc-space-between.bb.pt1.pb1.animate--on-scroll.animation--right
            h3= serviceName
        
        .animate--on-scroll.animation--right
          +service('The World’s First Successful Crypto Micro-Economy', '/portfolio/design-the-worlds-first-crypto-micro-economy')
          +service('Fractional Design for Product, Marketing, and More', '/portfolio/fractional-design-for-product-marketing-and-more')
          +service('Start Building MVP in Less Than 7 Days ', '/portfolio/start-building-mvp-in-less-than-7-days')
          +service('Fractional ', '/services/design-systems')
    
      .layout-visuals.layout-desktop.animate--on-scroll.animation--blur.animation--left
        img.image-with-border.image-sticky(src='/source/images/photo-hairpin-turn.jpg' srcset='/source/images/photo-hairpin-turn@2x.jpg 2x' draggable='false')





    include /source/components/cta.pug
    include /source/components/footer.pug
